<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Выбранное лекарство -->
        <TextView
            android:id="@+id/tvSelectedDrug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбранное лекарство"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"/>

        <!-- Тип лекарства -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Форма лекарства"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Расписание приёма -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расписание приёма"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Время начала приёма -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время начала"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <TimePicker
            android:id="@+id/tpStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:timePickerMode="spinner"/>

        <!-- Дата начала -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата начала"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <DatePicker
            android:id="@+id/dpStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Доза -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доза"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество таблеток/мл"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"/>

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/btnSaveMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
