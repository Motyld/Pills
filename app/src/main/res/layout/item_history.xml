<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <!-- Плановое время -->
    <TextView
        android:id="@+id/historyPlannedTime"
        android:text="План: 08:30"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Время фактического нажатия -->
    <TextView
        android:id="@+id/historyActionTime"
        android:text="Факт: 08:35"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Статус -->
    <TextView
        android:id="@+id/historyStatus"
        android:text="Принял"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Список лекарств -->
    <TextView
        android:id="@+id/historyMedicines"
        android:text="• Парацетамол — 1 таб\n• Витамин C — 500 мг"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
