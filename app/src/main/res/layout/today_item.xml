<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/medTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название лекарства"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/medDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medTitle"
            android:text="10 mg"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/medTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="08:00"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btnTaken"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/medTime"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_check" />

        <ImageView
            android:id="@+id/btnMissed"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/btnTaken"
            android:layout_below="@id/medTime"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
